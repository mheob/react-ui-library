{
  "name": "react-ui-library",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "boot": "yarn && yarn bootstrap",
    "bootstrap": "lerna bootstrap",
    "prebuild": "yarn clean-dist",
    "build": "lerna run build --stream",
    "prebuild:storybook": "rimraf storybook-static",
    "build:storybook": "build-storybook",
    "changeset": "changeset",
    "clean": "lerna clean --yes && rimraf coverage dist node_modules",
    "clean-dist": "lerna exec -- rimraf dist",
    "component:add": "ts-node ./tools/create-component",
    "dev": "start-storybook -p 6006",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,md,yaml,yml}' --ignore-path ./config/.prettierignore",
    "lint": "lerna run lint --stream",
    "pkg": "manypkg run",
    "prepare": "husky install config/husky",
    "release": "changeset publish",
    "start": "start-storybook -p 6006",
    "test": "jest --env=jsdom --passWithNoTests",
    "test:ci": "jest --runInBand",
    "test:ci:cov": "yarn test:ci --coverage",
    "test:cov": "yarn test --coverage",
    "test:watch": "yarn test --watch -u"
  },
  "lint-staged": {
    "extends": "./config/.lintstagedrc"
  },
  "browserslist": [
    "> 2% in DE",
    "last 3 versions",
    "Firefox ESR",
    "not dead"
  ],
  "prettier": "./config/.prettierrc.json",
  "eslintConfig": {
    "extends": "./config/.eslintrc.json"
  },
  "dependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@changesets/changelog-github": "^0.4.5",
    "@changesets/cli": "^2.23.0",
    "@manypkg/cli": "^0.19.1",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/node-logger": "^6.5.9",
    "@storybook/preset-create-react-app": "^4.1.2",
    "@storybook/react": "^6.5.9",
    "@types/jest": "^29.0.0",
    "@types/node": "^17.0.43",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.1",
    "import-sort": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "jest-watch-typeahead": "^2.0.0",
    "lerna": "^5.1.2",
    "lint-staged": "^13.0.1",
    "prettier": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.8.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "importSort": {
    ".js, .jsx, .es6, .es": {
      "parser": "babylon",
      "style": "module",
      "options": {}
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module",
      "options": {}
    }
  }
}
